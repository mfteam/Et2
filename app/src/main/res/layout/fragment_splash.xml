<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="mfteam.com.et2.viewmodel.splash.SplashViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/projectbacground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">


            <com.facebook.login.widget.LoginButton
                android:id="@+id/splash_facebook"
                style="@style/FacebookLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:onClick="@{viewModel.onClick}" />

            <Button
                android:id="@+id/splash_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/demobuttontwitter"
                android:elevation="20dp"
                android:onClick="@{viewModel.onClick}"
                android:text="@string/login_twitter"
                android:textColor="@color/color_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/splash_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/demosigninbutton"
                    android:elevation="20dp"
                    android:onClick="@{viewModel.onClick}"
                    android:text="@string/login_signin"
                    android:textColor="@color/color_white" />

                <Button
                    android:id="@+id/splash_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/demosigninbutton"
                    android:elevation="20dp"
                    android:onClick="@{viewModel.onClick}"
                    android:text="@string/login_register"
                    android:textColor="@color/color_white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
