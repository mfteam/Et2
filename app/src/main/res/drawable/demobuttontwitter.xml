<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="5dp"></corners>
    <gradient
        android:angle="45"
        android:centerX="37%"
        android:centerColor="@color/color_twitter"
        android:startColor="@color/color_twitter"
        android:endColor="@color/color_twitter"
        android:type="linear" />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"/>
    <size
        android:width="180dp"
        android:height="30dp"/>
    <stroke
        android:width="0dp"
        android:color="#FFF"/>
</shape>