<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="mfteam.com.et2.viewmodel.login.LoginViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/projectcolor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <mfteam.com.et2.util.Et2EditText
                style="@style/Et2EditTextStyle"
                android:addTextChangedListener="@{viewModel.getNickTextWatcher}"
                android:hint="@string/login_email_or_name" />

            <mfteam.com.et2.util.Et2EditText
                style="@style/Et2EditTextStyle"
                android:addTextChangedListener="@{viewModel.getPasswordTextWatcher}"
                android:hint="@string/register_password" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{viewModel.onClick}"
                android:text="@string/login" />

        </LinearLayout>
    </RelativeLayout>
</layout>
